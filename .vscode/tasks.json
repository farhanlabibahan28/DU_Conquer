
  {
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build raylib_sfml_app",
      "type": "shell",
      "command": "g++",
      "args": [
        "-o", "raylib_sfml_app",
        "main.cpp",
        "-lraylib",
        "-lGL", "-lm", "-lpthread", "-ldl", "-lrt", "-lX11",
        "-lsfml-graphics", "-lsfml-window", "-lsfml-system", "-lsfml-audio"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}

